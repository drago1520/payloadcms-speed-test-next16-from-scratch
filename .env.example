# Database connection string
DATABASE_URI=mongodb://root:password@127.0.0.1:27017/acme-website?authSource=admin

# Payload
# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# SMTP Configuration (for email notifications via inbucket)
SMTP_HOST=localhost
SMTP_PORT=12500
# SMTP_USER and SMTP_PASS are optional for local development (inbucket doesn't require authentication)
SMTP_USER=
SMTP_PASS=

# Payload BetterAuth
BETTER_AUTH_SECRET=YOUR_SECRET_HERE
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# S3 / MinIO Configuration
S3_BUCKET=payload-public
S3_PRIVATE_BUCKET=payload-private
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:19101